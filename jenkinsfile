

pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Post Build') { 
            steps {
                archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
		sh 'cp target/*.war /var/lib/jenkins/deploy/spark.war'
            }
        }
    }
}


