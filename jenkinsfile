
Jenkinsfile (Declarative Pipeline)

pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh 'echo lol'
            }
        }
        stage('Post Build') { 
            steps {
                archiveArtifacts artifacts: '/target/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
                deploy adapters: [tomcat9(credentialsId: 'ae812415-39de-4105-85e6-256125b0f341', path: '', url: 'http://localhost:8080')], contextPath: 'oum', war: 'target/*.war'

            }
        }
    }
}


